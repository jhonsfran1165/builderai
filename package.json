{
  "name": "builderai",
  "private": true,
  "engines": {
    "node": "20.11.1"
  },
  "workspaces": ["packages/*", "apps/*", "tooling/*"],
  "engineStrict": true,
  "packageManager": "pnpm@9.1.4",
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules dist .next",
    "clean:workspaces": "turbo clean --parallel",
    "dev": "cross-env FORCE_COLOR=1 turbo dev --parallel",
    "dev:web": "turbo dev --parallel --filter !@builderai/expo --filter !@builderai/db",
    "typecheck": "turbo typecheck",
    "wh": "pnpm dlx webhookthing@latest",
    "knip": "knip",
    "fmt": "pnpm biome format . --write && pnpm biome check . --apply"
  },
  "dependencies": {
    "@manypkg/cli": "^0.21.2",
    "@turbo/gen": "^1.12.4",
    "cross-env": "^7.0.3",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "knip": "^5.17.4"
  }
}
